<UserControl x:Class="Constructor5.SituationTemplates.SimpleSituation.SimpleSituationJobItemEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.SituationTemplates.SimpleSituation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <Expander Header="Role State" IsExpanded="True">
            <StackPanel>
                <TextBlock Text="Role states are a list of buffs added to Sims, typically used to define their autonomy." TextWrapping="Wrap" />
                <shared:ReferenceControl ElementTypeName="RoleState"
                                         Reference="{Binding RoleState}"
                                         ShowCreateButton="True" />
            </StackPanel>
        </Expander>
    </StackPanel>
</UserControl>
