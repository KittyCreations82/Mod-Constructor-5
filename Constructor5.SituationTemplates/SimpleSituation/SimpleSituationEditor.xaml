<UserControl x:Class="Constructor5.SituationTemplates.SimpleSituation.SimpleSituationEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.SituationTemplates.SimpleSituation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             x:Name="uc"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Margin="{StaticResource Constructor.BigPaddingUpDownOnly}">
        <shared:ReferenceListControl EditorCategory="ElementMini"
                                     ElementReferenceList="{Binding Jobs}"
                                     ElementTypeName="SituationJob"
                                     ItemTypeName="SimpleSituationJobItem"
                                     ShowCreateButton="True" CreateElementFunction="ReferenceListControl_CreateElementFunction" />
    </StackPanel>
</UserControl>
