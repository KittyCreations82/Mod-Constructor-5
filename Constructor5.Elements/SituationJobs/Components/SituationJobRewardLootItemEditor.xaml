<UserControl x:Class="Constructor5.Elements.SituationJobs.Components.SituationJobRewardLootItemEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.SituationJobs.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <CheckBox Content="Run when the situation ends at gold" IsChecked="{Binding RunOnGold}" />
        <CheckBox Content="Run when the situation ends at silver" IsChecked="{Binding RunOnSilver}" />
        <CheckBox Content="Run when the situation ends at bronze " IsChecked="{Binding RunOnBronze}" />
        <CheckBox Content="Run when the situation ends with no medal" IsChecked="{Binding RunOnNoMedal}" />
    </StackPanel>
</UserControl>
