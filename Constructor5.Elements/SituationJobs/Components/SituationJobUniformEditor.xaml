<UserControl x:Class="Constructor5.Elements.SituationJobs.Components.SituationJobUniformEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.SituationJobs.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <c:Field Label="OutfitChangeReason" LabelWidth="125">
            <c:TextBoxWithPresetsControl PresetsFolder="OutfitChangeReason" Text="{Binding OutfitChangeReason}" />
        </c:Field>
        <c:CheckBox IsChecked="{Binding HigherPriority}">
            <StackPanel>
                <c:TextBlock Text="OutfitHigherPriority" />
                <c:TextBlock FontStyle="Italic"
                           Text="OutfitHigherPriorityHelp"
                           />
            </StackPanel>
        </c:CheckBox>
    </StackPanel>
</UserControl>
