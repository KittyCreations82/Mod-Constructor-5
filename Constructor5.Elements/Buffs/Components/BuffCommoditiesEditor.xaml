<UserControl x:Class="Constructor5.Elements.Buffs.Components.BuffCommoditiesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructor5.Elements.Buffs.Components"
             xmlns:modifiers="clr-namespace:Constructor5.Elements.Buffs.Modifiers" xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <c:TextBlock Margin="{StaticResource Constructor.BigPaddingMinusTop}">CommoditiesNotice</c:TextBlock>
            <modifiers:BuffModifiersUI ElementTypeName="Commodity" ItemsSource="{Binding Commodities}" Margin="{StaticResource Constructor.BigPaddingMinusTop}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
