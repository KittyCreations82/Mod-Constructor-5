<UserControl x:Class="Constructor5.Elements.Buffs.Components.BuffCommoditiesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructor5.Elements.Buffs.Components"
             xmlns:modifiers="clr-namespace:Constructor5.Elements.Buffs.Modifiers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <TextBlock Margin="{StaticResource Constructor.BigPaddingMinusTop}" TextWrapping="Wrap">Commodities are used to make Sims autonomously desire to perform certain interactions. In this section, you can add commodities from existing traits, emotions and other EA resources. You can also set the score so that a Sim will desire interactions more or less than normal. Commodities can also do other things for more advanced modders.</TextBlock>
            <modifiers:BuffModifiersUI ElementTypeName="Commodity" ItemsSource="{Binding Commodities}" Margin="{StaticResource Constructor.BigPaddingMinusTop}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
