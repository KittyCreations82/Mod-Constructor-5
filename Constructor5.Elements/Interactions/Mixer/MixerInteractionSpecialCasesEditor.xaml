<UserControl x:Class="Constructor5.Elements.Interactions.Mixer.MixerInteractionSpecialCasesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.Interactions.Mixer"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Margin="{StaticResource Constructor.BigPaddingMinusTop}">
        <CheckBox IsChecked="{Binding IsIdle}">
            <StackPanel>
                <TextBlock Text="Is Idle" />
                <TextBlock FontStyle="Italic" TextWrapping="Wrap">The game will treat this as an &quot;idle&quot; interaction. This is typically used for interactions attached to traits or buffs.</TextBlock>
            </StackPanel>
        </CheckBox>
    </StackPanel>
</UserControl>
