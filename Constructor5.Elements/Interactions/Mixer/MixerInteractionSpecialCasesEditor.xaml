<UserControl x:Class="Constructor5.Elements.Interactions.Mixer.MixerInteractionSpecialCasesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.Interactions.Mixer"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Margin="{StaticResource Constructor.BigPaddingMinusTop}">
        <c:CheckBox IsChecked="{Binding IsIdle}">
            <StackPanel>
                <c:TextBlock Text="Is Idle" />
                <c:TextBlock FontStyle="Italic">The game will treat this as an &quot;idle&quot; interaction. This is typically used for interactions attached to traits or buffs.</c:TextBlock>
            </StackPanel>
        </c:CheckBox>
    </StackPanel>
</UserControl>
