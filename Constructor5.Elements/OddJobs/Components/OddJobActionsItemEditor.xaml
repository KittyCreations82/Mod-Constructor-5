<UserControl
    x:Class="Constructor5.Elements.OddJobs.Components.OddJobActionsItemEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Constructor5.Elements.OddJobs.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <c:CheckBox Content="RunOnGreatSuccess" IsChecked="{Binding RunOnGreatSuccess}" />
        <c:CheckBox Content="RunOnNormalSuccess" IsChecked="{Binding RunOnNormalSuccess}" />
        <c:CheckBox Content="RunOnNormalFailure" IsChecked="{Binding RunOnNormalFailure}" />
        <c:CheckBox Content="RunOnCriticalFailure" IsChecked="{Binding RunOnCriticalFailure}" />
    </StackPanel>
</UserControl>
