<UserControl x:Class="Constructor5.Elements.Rewards.RewardTypes.ObjectRewardEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.Rewards.RewardTypes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <shared:Field Label="Object Instance Key (Hex)" LabelWidth="150">
            <TextBox Text="{Binding ObjectHex, UpdateSourceTrigger=PropertyChanged}" />
        </shared:Field>
        <CheckBox Content="Unlock In Build Mode (for locked objects)" IsChecked="{Binding UnlockInBuildMode}" />
    </StackPanel>
</UserControl>
