<UserControl x:Class="Constructor5.Elements.Situations.Components.SituationVenuesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.Situations.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel Margin="{StaticResource Constructor.BigPaddingMinusTop}">
        <CheckBox Content="Include the residential lots of Sims who are part of the situation" IsChecked="{Binding IncludeGuestLots}" />
        <CheckBox Content="Include Generic Lots" IsChecked="{Binding IncludeGenericLots}" />
        <shared:Field Label="Other Allowed Lot Types" LabelWidth="150">
            <shared:ReferenceListControl ElementReferenceList="{Binding OtherAllowedVenues}" ElementTypeName="Venue" />
        </shared:Field>
    </StackPanel>
</UserControl>
