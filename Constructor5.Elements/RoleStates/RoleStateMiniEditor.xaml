<UserControl x:Class="Constructor5.Elements.RoleStates.RoleStateMiniEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.RoleStates"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <shared:ReferenceListControl ElementReferenceList="{Binding Buffs}"
                                     ElementTypeName="Buff"
                                     ItemTypeName="BuffWithReasonReferenceListItem"
                                     ShowCreateButton="True" />
        <Expander Header="Off Lot Autonomy Buff">
            <shared:ReferenceControl ElementTypeName="Buff"
                                     Reference="{Binding OffLotAutonomyBuff}"
                                     ResetTo="38292"
                                     ResetToLabel="On Lot Only" />
        </Expander>
    </StackPanel>
</UserControl>
