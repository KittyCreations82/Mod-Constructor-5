<UserControl x:Class="Constructor5.Elements.SituationGoals.Components.SituationGoalTemplateEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.SituationGoals.Components"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="{StaticResource Constructor.BigPaddingMinusTop}">
            <shared:SelectableObjectControl EditorCategory="Invalid"
                                            Object="{Binding Template}"
                                            TypeRegistryCategory="SituationGoalTemplates" />
            <shared:ObjectEditorControl EditorCategory="Default" Object="{Binding Template}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
