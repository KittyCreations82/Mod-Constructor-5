<UserControl x:Class="Constructor5.Elements.SituationGoals.SituationGoalMiniEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:Constructor5.Elements.SituationGoals.Components"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             x:Name="uc"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <components:SituationGoalInfoEditor x:Name="SituationGoalInfoEditor" Margin="0" />
        <shared:Field Label="Goal Type" LabelWidth="100">
            <shared:SelectableObjectControl EditorCategory="Invalid"
                                            Object="{Binding SituationGoalTemplateComponent.Template, ElementName=uc}"
                                            TypeRegistryCategory="SituationGoalTemplates" />
        </shared:Field>
        <shared:ObjectEditorControl EditorCategory="Default" Object="{Binding SituationGoalTemplateComponent.Template, ElementName=uc}" />
    </StackPanel>
</UserControl>