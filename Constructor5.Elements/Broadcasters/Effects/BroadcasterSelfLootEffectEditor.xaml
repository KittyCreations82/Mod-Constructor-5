<UserControl x:Class="Constructor5.Elements.Broadcasters.Effects.BroadcasterSelfLootEffectEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructor5.Elements.Broadcasters.Effects" xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <shared:ReferenceListControl ElementReferenceList="{Binding LootActionSets}" ElementTypeName="LootActionSet" ShowCreateButton="True" EditorCategory="Default" EditorTag="NoScrollbar" />
        <shared:Field Label="Required Receivers Range" LabelWidth="200">
            <StackPanel>
                <shared:IntBoundsControl Bounds="{Binding RequiredReceiversRange}" Minimum="1" Maximum="20" />
                <TextBlock FontStyle="Italic" TextWrapping="Wrap">If defined, the number of receivers must be in the given range.</TextBlock>
            </StackPanel>
        </shared:Field>
    </StackPanel>
</UserControl>
