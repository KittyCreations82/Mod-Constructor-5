<UserControl x:Class="Constructor5.Elements.Statistics.StatisticEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.Statistics"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <c:Field Label="InitialValue" LabelWidth="100">
            <xctk:IntegerUpDown Text="{Binding InitialValue}" />
        </c:Field>
        <c:Field Label="MinValue" LabelWidth="100">
            <xctk:IntegerUpDown Text="{Binding MinValue}" />
        </c:Field>
        <c:Field Label="MaxValue" LabelWidth="100">
            <xctk:IntegerUpDown Text="{Binding MaxValue}" />
        </c:Field>
    </StackPanel>
</UserControl>
