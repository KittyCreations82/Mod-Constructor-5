<UserControl x:Class="Constructor5.Elements.SituationGoals.Templates.SituationGoalActorEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <CheckBox Content="Don't select the goal if the conditions are already met" IsChecked="{Binding IgnoreIfAlreadyMet}" />
        <shared:SelectableObjectControl EditorCategory="Invalid"
                                        Object="{Binding PrimaryCondition}"
                                        TypeRegistryCategory="SituationGoalConditionTypes" />
        <shared:ObjectEditorControl EditorCategory="Default" Object="{Binding PrimaryCondition}" />
    </StackPanel>
</UserControl>
