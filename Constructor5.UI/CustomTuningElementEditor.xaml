<UserControl x:Class="Constructor5.Elements.CustomTuningElements.CustomTuningElementEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.CustomTuningElements"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <shared:CustomTuningCommand x:Key="CustomTuningCommand" />
    </UserControl.Resources>
    <StackPanel Margin="{StaticResource Constructor.BigPaddingMinusTop}">
        <TextBlock Text="This is a custom tuning element and consists entirely of custom tuning. The instance type, class and module is determined by the content in the &lt;I&gt; tag, while the name and key is determined by Mod Constructor, like any other element." TextWrapping="Wrap" />
        <Button HorizontalAlignment="Left"
                Command="{StaticResource CustomTuningCommand}"
                CommandParameter="{Binding}"
                Content="Open Custom Tuning" />
    </StackPanel>
</UserControl>
