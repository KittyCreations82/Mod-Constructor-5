<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Constructor.OverlayStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource Constructor.OverlayBackground}" />
    </Style>
    <Style x:Key="Constructor.ErrorStyle" TargetType="{x:Type Border}">
        <Setter Property="Padding" Value="5" />
    </Style>
    <Style x:Key="Constructor.SliderBoxStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource Constructor.OverlayBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource Constructor.Foreground}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>
</ResourceDictionary>