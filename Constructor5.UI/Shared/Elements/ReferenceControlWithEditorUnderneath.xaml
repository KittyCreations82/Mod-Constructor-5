<UserControl x:Class="Constructor5.UI.Shared.ReferenceControlWithEditorUnderneath"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.UI.Shared"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="uc"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <local:ReferenceControl CreateElementFunction="ReferenceControl_CreateElementFunction"
                                EditorCategory="Invalid"
                                ElementType="{Binding ElementType, ElementName=uc}"
                                Reference="{Binding Reference, ElementName=uc}"
                                ShowBrowseButton="{Binding ShowBrowseButton, ElementName=uc}"
                                ShowCreateButton="{Binding ShowCreateButton, ElementName=uc}"
                                ShowResetButton="{Binding ShowResetButton, ElementName=uc}" />
        <local:ObjectEditorControl EditorCategory="{Binding EditorCategory, ElementName=uc}"
                                   EditorTag="{Binding EditorTag, ElementName=uc}"
                                   Object="{Binding Reference.Element, ElementName=uc}" />
    </StackPanel>
</UserControl>
