<UserControl x:Class="Constructor5.UI.Shared.DoubleSlider"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructor5.UI.Shared" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="uc">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Slider Value="{Binding Value, ElementName=uc}" IsSnapToTickEnabled="True" TickFrequency="{Binding Increment, ElementName=uc}" VerticalAlignment="Center"
                Maximum="{Binding SliderMaximum, ElementName=uc}"
                Minimum="{Binding SliderMinimum, ElementName=uc}"
        />
        <xctk:DoubleUpDown Text="{Binding Value, ElementName=uc, UpdateSourceTrigger=PropertyChanged}" Increment="{Binding Increment, ElementName=uc}" Grid.Column="1" Margin="2" />
    </Grid>
</UserControl>
