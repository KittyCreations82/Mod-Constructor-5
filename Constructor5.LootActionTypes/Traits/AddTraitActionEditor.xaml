<UserControl x:Class="Constructor5.LootActionTypes.Traits.AddTraitActionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.LootActionTypes.Traits"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <shared:Field Label="Trait" LabelWidth="100">
            <shared:ReferenceControl ElementTypeName="Trait"
                                     Reference="{Binding Trait}"
                                     ShowCreateButton="True" />
        </shared:Field>
        <shared:Field Label="Participant" LabelWidth="100">
            <shared:ParticipantControl Text="{Binding Participant}" />
        </shared:Field>
        <shared:Field Label="Chance" LabelWidth="100">
            <shared:ComplexChanceControl Chance="{Binding Chance}" />
        </shared:Field>
    </StackPanel>
</UserControl>
