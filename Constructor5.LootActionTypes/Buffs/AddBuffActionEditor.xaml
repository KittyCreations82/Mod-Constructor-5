<UserControl x:Class="Constructor5.LootActionTypes.Buffs.AddBuffActionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructor5.LootActionTypes.Buffs" xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI" xmlns:references="clr-namespace:Constructor5.Elements.Buffs.References;assembly=Constructor5.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <references:BuffWithReasonControl BuffWithReason="{Binding Buff}" />
        <CheckBox IsChecked="{Binding IgnoreIfAlreadyHasBuff}" Content="Ignore if the Sim already has the buff" />
        <shared:Field Label="Participant" LabelWidth="100">
            <shared:ParticipantControl Text="{Binding Participant}" />
        </shared:Field>
        <shared:Field Label="Chance" LabelWidth="100">
            <shared:ComplexChanceControl Chance="{Binding Chance}" />
        </shared:Field>
    </StackPanel>
</UserControl>
