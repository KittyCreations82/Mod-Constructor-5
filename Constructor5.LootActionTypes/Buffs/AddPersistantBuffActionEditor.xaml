<UserControl x:Class="Constructor5.LootActionTypes.Buffs.AddPersistantBuffActionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.LootActionTypes.Buffs"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:references="clr-namespace:Constructor5.Elements.Buffs.References;assembly=Constructor5.Elements"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <references:BuffWithReasonControl BuffWithReason="{Binding Buff}"
                                          CreateElementFunction="BuffWithReasonControl_CreateElementFunction"
                                          EditorTag="PersistantBuff" />
    </StackPanel>
</UserControl>
