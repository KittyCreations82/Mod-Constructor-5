<UserControl x:Class="Constructor5.SimFilterTypes.TraitFilterEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.SimFilterTypes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <shared:Field Label="Trait" LabelWidth="100">
            <shared:ReferenceControl ElementTypeName="Trait" Reference="{Binding Trait}" />
        </shared:Field>
        <CheckBox IsChecked="{Binding IgnoreIfWrongPack}">
            <StackPanel>
                <TextBlock Text="Ignore if the trait is not found" />
                <TextBlock FontStyle="Italic"
                           Text="For example, if the trait is from a pack the player does not have installed"
                           TextWrapping="Wrap" />
            </StackPanel>
        </CheckBox>
        <CheckBox Content="Inverted" IsChecked="{Binding InvertScore}" />
    </StackPanel>
</UserControl>
