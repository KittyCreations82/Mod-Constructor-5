<UserControl x:Class="Constructor5.SimFilterTypes.SkillFilterEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.SimFilterTypes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <shared:Field Label="Skill" LabelWidth="100">
            <shared:ReferenceControl ElementTypeName="Skill" Reference="{Binding Skill}" />
        </shared:Field>
        <shared:Field Label="Min Value" LabelWidth="100">
            <xctk:IntegerUpDown Minimum="0" Text="{Binding MinValue}" />
        </shared:Field>
        <shared:Field Label="Max Value" LabelWidth="100">
            <xctk:IntegerUpDown Minimum="0" Text="{Binding MaxValue}" />
        </shared:Field>
        <shared:Field Label="Ideal Value" LabelWidth="100">
            <xctk:IntegerUpDown Minimum="0" Text="{Binding IdealValue}" />
        </shared:Field>
        <CheckBox Content="Inverted" IsChecked="{Binding InvertScore}" />
    </StackPanel>
</UserControl>
