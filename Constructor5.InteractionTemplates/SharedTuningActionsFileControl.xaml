<UserControl x:Class="Constructor5.InteractionTemplates.SharedTuningActionsFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Constructor5.InteractionTemplates" xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <c:Expander Header="AdvancedOptions">
        <c:Field Label="TuningActionsFile" LabelWidth="150">
            <c:TextBox Text="{Binding TuningActionsFile}" />
        </c:Field>    
    </c:Expander>
</UserControl>
