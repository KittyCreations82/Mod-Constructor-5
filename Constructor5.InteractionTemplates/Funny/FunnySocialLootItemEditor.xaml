<UserControl x:Class="Constructor5.InteractionTemplates.Funny.FunnySocialLootItemEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.InteractionTemplates.Funny"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <c:CheckBox Content="RunWhenInteractionGreatlySucceeds" IsChecked="{Binding RunOnGreatSuccess}" />
        <c:CheckBox Content="RunWhenInteractionSuccessNormally" IsChecked="{Binding RunOnSuccess}" />
        <c:CheckBox Content="RunWhenInteractionFailsNormally" IsChecked="{Binding RunOnFailure}" />
        <c:CheckBox Content="RunWhenInteractionFailsHorribly" IsChecked="{Binding RunOnHorribleFailure}" />
        <c:CheckBox IsChecked="{Binding RunOnSocialContextFailure}">
            <c:TextBlock Text="RunOnSocialContextFailure" />
        </c:CheckBox>
    </StackPanel>
</UserControl>
