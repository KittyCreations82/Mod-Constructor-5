<UserControl x:Class="Constructor5.InteractionTemplates.Mean.MeanSocialLootItemEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.InteractionTemplates.Mean"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <CheckBox Content="Run on level 1 success" IsChecked="{Binding RunOnLevel1Success}" />
        <CheckBox Content="Run on level 2 success" IsChecked="{Binding RunOnLevel2Success}" />
        <CheckBox Content="Run on level 3 success" IsChecked="{Binding RunOnLevel3Success}" />
    </StackPanel>
</UserControl>
