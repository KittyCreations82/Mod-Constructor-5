<UserControl x:Class="Constructor5.TestConditionTypes.Statistics.SkillConditionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.TestConditionTypes.Statistics"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <c:Field Label="Skill" LabelWidth="100">
            <c:ReferenceControl Reference="{Binding Skill}" ElementTypeName="Skill" />
        </c:Field>
        <c:Field Label="Bounds" LabelWidth="100">
            <c:IntBoundsControl Bounds="{Binding Bounds}" />
        </c:Field>
    </StackPanel>
</UserControl>
