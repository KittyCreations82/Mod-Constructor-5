<UserControl
    x:Class="Constructor5.TestConditionTypes.Seasons.SeasonConditionEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Constructor5.TestConditionTypes.Seasons"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <c:CheckBox IsChecked="{Binding AllowSpring}" Content="AllowSpring" />
        <c:CheckBox IsChecked="{Binding AllowSummer}" Content="AllowSummer" />
        <c:CheckBox IsChecked="{Binding AllowFall}" Content="AllowFall" />
        <c:CheckBox IsChecked="{Binding AllowWinter}" Content="AllowWinter" />
        <c:CheckBox IsChecked="{Binding PassIfSeasonsNotInstalled}" Content="PassIfSeasonsNotInstalled" />
    </StackPanel>
</UserControl>
