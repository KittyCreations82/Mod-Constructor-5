<UserControl x:Class="Constructor5.TestConditionTypes.Money.SimoleonValueConditionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.TestConditionTypes.Money"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>

        <shared:Field Label="Context" LabelWidth="100">
            <shared:EnumSelectorControl SelectedItem="{Binding Context}" TypeName="SimoleonValueContext">
                <shared:EnumSelectorControl.Replacements>
                    <shared:EnumSelectorReplaceDictionary>
                        <system:String x:Key="NetWorth">Net Worth</system:String>
                        <system:String x:Key="PropertyOnly">Lot Value</system:String>
                        <system:String x:Key="TotalCash">Money In Hand</system:String>
                        <system:String x:Key="BusinessFunds">Business Funds</system:String>
                        <!--<system:String x:Key="CurrentValue">Object Value</system:String>-->
                    </shared:EnumSelectorReplaceDictionary>
                </shared:EnumSelectorControl.Replacements>
            </shared:EnumSelectorControl>
        </shared:Field>

        <shared:Field Label="Threshold" LabelWidth="100">
            <shared:ThresholdControl Threshold="{Binding Threshold}" />
        </shared:Field>
    </StackPanel>
</UserControl>
